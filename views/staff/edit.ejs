<%- include('../partials/header') %>

<div class="container mt-5">
  <h1>Edit your questions</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form action="/staff/edit" method="POST">
            <div class="form-group">
              <label for="question">question</label>
              <input type="text" class="form-control" name="question" value="<%=question.question%>">
            </div>

            <div class="form-group">
                <label for="option1">option A </label>
                <input type="text" class="form-control" name="option1" value="<%=question.option1%>">
              </div>

              <div class="form-group">
                <label for="option2">option B</label>
                <input type="text" class="form-control" name="option2" value="<%=question.option2%>" required>
              </div>

              <div class="form-group">
                <label for="option3">option C</label>
                <input type="text" class="form-control" name="option3" value="<%=question.option3%>" required>
              </div>

              <div class="form-group">
                <label for="option4">option D</label>
                <input type="text" class="form-control" name="option4" value="<%=question.option4%>" required> 
              </div>

              <div class="form-group">
                <label for="answer">correct answer</label>
                <input type="text" class="form-control" name="answer" value="<%= question.answer %> " required>
              </div>

           
          
            <button type="submit" class="btn btn-dark">Update</button>
          </form>

        </div>
      </div>
    </div>

